// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.194.0/containers/dotnet
{
	"name": "Mock Space Station Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			// Update 'VARIANT' to pick a .NET Core version: 2.1, 3.1, 5.0
			"VARIANT": "5.0",
			// Options
			"NODE_VERSION": "none",
			"INSTALL_AZURE_CLI": "false"
		}
	},
	"runArgs": [
		"--init",
		"--privileged"
	],
	"overrideCommand": false,
	// Set *default* container specific settings.json values on container create.
	"settings": {},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-dotnettools.csharp"
	],
	"updateContentCommand": "/tmp/library-scripts/mock-spacestation-setup.sh",
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind",
		"source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind",
		"source=${env:HOME}${env:USERPROFILE}/.mock-spacestation/groundstation,target=${containerWorkspaceFolder}/groundstation,type=bind",
		"source=${env:HOME}${env:USERPROFILE}/.mock-spacestation/logs,target=${containerWorkspaceFolder}/logs,type=bind"
	],
	"remoteUser": "vscode",
	"remoteEnv": {
		"SPACE_NETWORK_NAME": "spacedev-vnet-spacestation",
		"STATION_CONTAINER_NAME": "spacedev-spacestation",
		"STATION_USERNAME": "azureuser",
		"STATION_SSH_KEY": "/home/vscode/.ssh/id_rsa_spaceStation",
		"GROUND_STATION_DIR": "${containerWorkspaceFolder}/groundstation",
		"LOG_DIR": "${containerWorkspaceFolder}/logs",
	}
}